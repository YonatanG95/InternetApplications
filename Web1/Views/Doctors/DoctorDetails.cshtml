@model Web1.Models.Doctor

@{
    ViewBag.Title = "Doctor Details";
}

<h2>Doctor Details</h2>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

    </dl>
</div>

<p>
    <b>Name:</b> @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName) <br>
    <b>Specialization:</b> @Html.DisplayFor(model => model.Specialization)
</p>

<p>
    @Html.ActionLink("Edit", "EditDoctor", new { id = Model.DoctorID }) |
    @Html.ActionLink("Back to List", "ListDoctors")
</p>
